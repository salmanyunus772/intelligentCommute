<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="135dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon1" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="290dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="57dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/registerborder" >

            <TextView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:text="Recover Account"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/cell"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="50dp"
                android:hint="Enter Your Cell Number"
                android:textColorHint="#063a79"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="50dp"
                android:hint="Enter New Password"
                android:textColorHint="#063a79"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="76dp"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/submitbtn" />

            <Button
                android:id="@+id/signin"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="12dp"
                android:text="@string/signin"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:background="@color/colorBackground" />

            <Button
                android:id="@+id/signup"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="198dp"
                android:text="@string/signup"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:background="@color/colorBackground" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
