<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="135dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon1" />

        <RelativeLayout
            android:layout_width="352dp"
            android:layout_height="320dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="28.5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/registerborder" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Sign In"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/email"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:hint="Email"
                android:textColorHint="#063a79"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/password"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:hint="Password"
                android:textColorHint="#063a79"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true" />

            <CheckBox
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="150dp"
                android:text="Remember Me"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="200dp"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/submitbtn"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_marginTop="240dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_horizontal" >

            <Button
                android:id="@+id/forgetPassword"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:text="@string/forgetPassword"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:background="@color/colorBackground" />

            <Button
                android:id="@+id/guestStudent"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="113dp"
                android:text="@string/guestStudent"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:background="@color/colorBackground" />

            <Button
                android:id="@+id/signup"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="223dp"
                android:text="@string/signup"
                android:textColor="#063a79"
                android:textAlignment="center"
                android:background="@color/colorBackground" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
